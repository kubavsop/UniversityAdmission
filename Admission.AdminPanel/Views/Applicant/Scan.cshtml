@model Admission.DTOs.RpcModels.DocumentService.ScanRpcModel


@{

}
<div class="card">
    <div class="card-body d-flex flex-column">
        <div class="d-flex flex-row flex-wrap align-content-center">
            <div class="mr-1">
                @Model.Name
            </div>
    
            <div class="d-flex flex-row gap-1 align-items-center ms-auto">
                <form asp-action="DownloadScan" method="post" class="">
                    <input class="form-control" type="text" asp-for="ScanId" hidden/>
                    <button type="submit" class="btn btn-primary">Скачать</button>
                </form>
                @if (Model.IsEditable)
                {
                    <form asp-action="DeleteScan" method="post" class="">
                        <input class="form-control" type="text" asp-for="ScanId" hidden/>
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>   
                }
            </div>
        </div>
    </div>
</div>