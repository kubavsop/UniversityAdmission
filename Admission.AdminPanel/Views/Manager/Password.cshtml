@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Изменение пароля";
}

<div class="d-flex flex-column flex-wrap justify-content-center">
    <h2>Изменение пароля</h2>

    <form asp-action="Password" method="post" class="">
        <div class="d-flex flex-column flex-wrap gap-2">
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input class="form-control" asp-for="OldPassword" />
                <span class="text-danger" asp-validation-for="OldPassword" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input class="form-control" asp-for="NewPassword" />
                <span class="text-danger" asp-validation-for="NewPassword" />
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
            <button type="submit" class="btn mt-1 btn-primary btn-block">Сохранить</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}